@using JunoBank.Web.Services

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Lock" Class="mr-2" /> Reset Picture Password
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body2" Style="color: var(--mud-palette-text-secondary); margin-bottom: 1.5rem;">
            Pick 4 images as the new password for @ChildName.
        </MudText>

        <PictureGridSetup @bind-SelectedImages="_selectedImages" />

        <ErrorAlert Message="@_errorMessage" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton OnClick="Save"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   Disabled="@(_selectedImages.Count != 4 || _isSaving)">
            @if (_isSaving)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            Save
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public int ChildId { get; set; }
    [Parameter] public string ChildName { get; set; } = string.Empty;

    [Inject] private IUserService UserService { get; set; } = default!;
    [Inject] private ISnackbar Snackbar { get; set; } = default!;

    private List<string> _selectedImages = new();
    private bool _isSaving;
    private string _errorMessage = string.Empty;

    private void Cancel() => MudDialog.Cancel();

    private async Task Save()
    {
        if (_selectedImages.Count != 4) return;

        _isSaving = true;
        _errorMessage = string.Empty;

        try
        {
            await UserService.UpdatePicturePasswordAsync(ChildId, _selectedImages.ToArray());
            Snackbar.Add($"Picture password updated for {ChildName}!", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception)
        {
            _errorMessage = "Something went wrong. Please try again.";
        }
        finally
        {
            _isSaving = false;
        }
    }
}
