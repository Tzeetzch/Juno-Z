@inherits LayoutComponentBase
@using JunoBank.Web.Auth

<MudThemeProvider Theme="_theme" IsDarkMode="true" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Primary" Elevation="4">
        <MudText Typo="Typo.h5" Class="ml-3">Juno Bank</MudText>
        <MudSpacer />

        <AuthorizeView>
            <Authorized>
                <MudText Class="mr-3">Hi, @context.User.Identity?.Name!</MudText>
                <MudTooltip Text="Logout">
                    <MudIconButton Icon="@Icons.Material.Filled.Logout"
                                   Color="Color.Inherit"
                                   OnClick="HandleLogout" />
                </MudTooltip>
            </Authorized>
        </AuthorizeView>
    </MudAppBar>

    <MudMainContent Class="pt-16 pa-4">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    [Inject] private CustomAuthStateProvider AuthProvider { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private MudTheme _theme = new()
    {
        PaletteLight = new PaletteLight
        {
            Primary = "#FF6B35",
            Secondary = "#9B59B6",
        },
        PaletteDark = new PaletteDark
        {
            Primary = "#FF6B35",
            Secondary = "#9B59B6",
            Background = "#1a1a2e",
            Surface = "#16213e",
            AppbarBackground = "#0f0f1a",
            DrawerBackground = "#16213e",
            TextPrimary = "#ffffff",
            TextSecondary = "rgba(255,255,255,0.7)"
        }
    };

    private async Task HandleLogout()
    {
        await AuthProvider.LogoutAsync();
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}
