@page "/"
@using JunoBank.Web.Data.Entities
@using JunoBank.Web.Services
@using JunoBank.Web.Utils

<PageTitle>Juno Bank</PageTitle>

@if (_isLoading)
{
    <div style="display: flex; justify-content: center; align-items: center; height: 60vh;">
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" />
    </div>
}

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    [Inject] private ISetupService SetupService { get; set; } = default!;
    [Inject] private IAuthService AuthService { get; set; } = default!;

    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        // Check if setup is required (no admin exists)
        if (await SetupService.IsSetupRequiredAsync())
        {
            Navigation.NavigateTo(AppRoutes.Setup.Wizard);
            return;
        }

        // Check if user is authenticated
        var session = await AuthService.GetCurrentUserAsync();
        if (session == null)
        {
            Navigation.NavigateTo(AppRoutes.Auth.Login);
            return;
        }

        // Redirect based on role
        if (session.Role == UserRole.Child)
        {
            Navigation.NavigateTo(AppRoutes.Child.Dashboard);
        }
        else
        {
            Navigation.NavigateTo(AppRoutes.Parent.Dashboard);
        }
    }
}
